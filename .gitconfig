[user]
    email = dmitry.guzeev@yahoo.com
    name = Dmitry Guzeev
[core]
    editor = nvim
[alias]
    co = commit
    ck = checkout
    a = add
    s = status
    b = branch
    mff = merge --no-ff --no-edit
    sync = "!sh -c 'git checkout --quiet --detach HEAD && \
            git fetch origin master:master dev:dev; \
            git checkout --quiet -'"
[credential]
    helper = cache --timeout=3600
[color]
    ui = true
[push]
    default = current
[diff]
    tool = meld
